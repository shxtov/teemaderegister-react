{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["standard", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,      
      "jsx": true
    }
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": ["error"],
    "react/sort-prop-types": ["error"]    
  }
}